<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window / panel backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF1E1E2E"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FF2A2A3E"/>

    <!-- Text -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="#FFAAAAAA"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#FF555577"/>

    <!-- Accent button -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF3A86FF"/>

    <!-- Secondary button -->
    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="#FF555577"/>

    <!-- ComboBox dropdown background -->
    <SolidColorBrush x:Key="DropdownBackgroundBrush" Color="#FF2A2A3E"/>
    <SolidColorBrush x:Key="DropdownItemHoverBrush" Color="#FF3A3A50"/>

</ResourceDictionary>
