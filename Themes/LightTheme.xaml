<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window / panel backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFF3F3F3"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFFFF"/>

    <!-- Text -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="#FF666666"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#FFCCCCCC"/>

    <!-- Accent button -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0067C0"/>

    <!-- Secondary button -->
    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="#FFCCCCCC"/>

    <!-- ComboBox dropdown background -->
    <SolidColorBrush x:Key="DropdownBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="DropdownItemHoverBrush" Color="#FFE5E5E5"/>

</ResourceDictionary>
