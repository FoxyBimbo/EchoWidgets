<Window x:Class="EchoUI.Views.FullScreenShellWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Echo Shell" WindowStyle="None" WindowState="Maximized"
        ResizeMode="NoResize" ShowInTaskbar="False"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}"
        SourceInitialized="Window_SourceInitialized"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave"
        PreviewKeyDown="Window_PreviewKeyDown"
        Loaded="Window_Loaded"
        Focusable="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource ControlBackgroundBrush}" Padding="10">
            <DockPanel LastChildFill="True">
                <TextBlock Text="Open windows:" FontWeight="SemiBold" Margin="0,0,10,0"
                           VerticalAlignment="Center" Foreground="{DynamicResource MutedForegroundBrush}"/>
                <ItemsControl ItemsSource="{Binding OpenWindowTitles}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource WindowBackgroundSemiBrush}"
                                    CornerRadius="8" Padding="8,4" Margin="0,0,6,4">
                                <TextBlock Text="{Binding}" FontSize="12" TextTrimming="CharacterEllipsis"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </Border>

            <Border Background="{DynamicResource WindowBackgroundSemiBrush}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="12" Padding="12"
                    Width="260" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,16,0,0">
                <DockPanel>
                    <TextBlock Text="Desktop Tools" FontWeight="SemiBold" DockPanel.Dock="Top" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Click="BtnWordProcessor_Click"
                                Margin="0,0,8,0" Padding="6"
                                Background="{DynamicResource ControlBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}">
                            <StackPanel Width="70" HorizontalAlignment="Center">
                                <Border Width="40" Height="40" CornerRadius="8"
                                        Background="{DynamicResource WindowBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ“" FontSize="20"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Writer" FontSize="10" TextAlignment="Center"
                                           TextTrimming="CharacterEllipsis" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Click="BtnSheetsEditor_Click"
                                Padding="6"
                                Background="{DynamicResource ControlBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}">
                            <StackPanel Width="70" HorizontalAlignment="Center">
                                <Border Width="40" Height="40" CornerRadius="8"
                                        Background="{DynamicResource WindowBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ“Š" FontSize="20"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Sheets" FontSize="10" TextAlignment="Center"
                                           TextTrimming="CharacterEllipsis" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

        <Grid Grid.Row="1" Margin="20">
            <Border Background="{DynamicResource WindowBackgroundSemiBrush}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="12" Padding="12"
                    Width="260" HorizontalAlignment="Left" VerticalAlignment="Top">
                <DockPanel>
                    <TextBlock Text="Browser Links" FontWeight="SemiBold" DockPanel.Dock="Top" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding BrowserLinks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Tag="{Binding Target}" Click="BrowserLink_Click"
                                        Margin="0,0,8,8" Padding="6"
                                        Background="{DynamicResource ControlBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}">
                                    <StackPanel Width="70" HorizontalAlignment="Center">
                                        <Border Width="40" Height="40" CornerRadius="8"
                                                Background="{DynamicResource WindowBackgroundBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding IconGlyph}" FontSize="20"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" FontSize="10" TextAlignment="Center"
                                                   TextTrimming="CharacterEllipsis" Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
            </Border>

            <Border Background="{DynamicResource WindowBackgroundSemiBrush}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="12" Padding="12"
                    Width="320" HorizontalAlignment="Right" VerticalAlignment="Top">
                <DockPanel>
                    <TextBlock Text="Open Apps" FontWeight="SemiBold" DockPanel.Dock="Top" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding OpenWindowTitles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource ControlBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                        CornerRadius="8" Padding="8,6" Margin="0,0,8,8" Width="140">
                                    <TextBlock Text="{Binding}" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="{DynamicResource ControlBackgroundBrush}" Padding="6">
            <DockPanel>
                <Button x:Name="BtnStart" Content="Start" Click="BtnStart_Click"
                        Padding="14,6" Margin="4,0"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="{DynamicResource ForegroundBrush}" BorderBrush="Transparent"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnTray" Content="Tray" Click="BtnTray_Click"
                            Padding="10,4" Margin="0,0,8,0"
                            Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"/>
                    <Button x:Name="BtnDate" Content="{Binding CurrentDate}" Click="BtnDate_Click"
                            Padding="10,4" Margin="0,0,4,0"
                            Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"/>
                    <Button x:Name="BtnTime" Content="{Binding CurrentTime}" Click="BtnTime_Click"
                            Padding="10,4"
                            Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Popup x:Name="StartMenuPopup" PlacementTarget="{Binding ElementName=BtnStart}" Placement="Top"
               StaysOpen="False" AllowsTransparency="True">
            <Border Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="12" Padding="12" Width="260">
                <StackPanel>
                    <TextBlock Text="Echo Start" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Button Content="App Settings" Click="BtnAppSettings_Click"
                            Padding="10,6" Margin="0,0,0,6"
                            Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" HorizontalContentAlignment="Left"/>
                    <Button Click="BtnSystemSettings_Click" Padding="10,6"
                            Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™" Margin="0,0,8,0"/>
                            <TextBlock Text="System Settings"/>
                        </StackPanel>
                    </Button>
                    <Button Content="Close Shell" Click="BtnCloseShell_Click"
                            Padding="10,6" Margin="0,8,0,0"
                            Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Border>
        </Popup>

        <Popup x:Name="TrayPopup" PlacementTarget="{Binding ElementName=BtnTray}" Placement="Top"
               StaysOpen="False" AllowsTransparency="True">
            <Border Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="10" Padding="10" Width="220">
                <StackPanel>
                    <TextBlock Text="System Tray" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="ðŸ”ˆ" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="ðŸ“¶" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="ðŸ”‹" FontSize="16"/>
                    </StackPanel>
                    <TextBlock Text="Tray items appear here." FontSize="11"
                               Foreground="{DynamicResource MutedForegroundBrush}"/>
                </StackPanel>
            </Border>
        </Popup>

        <Popup x:Name="CalendarPopup" PlacementTarget="{Binding ElementName=BtnDate}" Placement="Top"
               StaysOpen="False" AllowsTransparency="True">
            <Border Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="10" Padding="10">
                <Calendar SelectedDate="{Binding SelectedCalendarDate}"/>
            </Border>
        </Popup>

        <Popup x:Name="ClockPopup" PlacementTarget="{Binding ElementName=BtnTime}" Placement="Top"
               StaysOpen="False" AllowsTransparency="True">
            <Border Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="10" Padding="16">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentTime}" FontSize="26" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentDate}" FontSize="12"
                               Foreground="{DynamicResource MutedForegroundBrush}"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
