<Window x:Class="EchoUI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EchoUI Settings" Height="460" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2E" Foreground="White"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- General Settings -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="General Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="Accent Color:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="TxtAccentColor" Width="100" Text="#FF3A86FF"
                         Background="#FF2A2A3E" Foreground="White" BorderBrush="#FF555577"/>
            </StackPanel>
        </StackPanel>

        <!-- Extensions -->
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Extensions (Plugins &amp; Widgets)" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="BtnImportPlugin" Content="Import Plugin…" Click="BtnImportPlugin_Click"
                        Padding="12,6" Margin="0,0,8,0" Background="#FF3A86FF" Foreground="White" BorderBrush="Transparent"/>
                <Button x:Name="BtnImportWidget" Content="Import Widget…" Click="BtnImportWidget_Click"
                        Padding="12,6" Background="#FF3A86FF" Foreground="White" BorderBrush="Transparent"/>
            </StackPanel>
        </StackPanel>

        <ListBox x:Name="LstExtensions" Grid.Row="2" Background="#FF2A2A3E" Foreground="White"
                 BorderBrush="#FF555577" Margin="0,4,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock VerticalAlignment="Center">
                            <Run Text="{Binding Name, Mode=OneWay}" FontWeight="SemiBold"/>
                            <Run Text=" (" /><Run Text="{Binding Kind, Mode=OneWay}"/>
                            <Run Text=", "/><Run Text="{Binding ScriptType, Mode=OneWay}"/><Run Text=")"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" Click="BtnSave_Click" Padding="20,8" Margin="0,0,8,0"
                    Background="#FF3A86FF" Foreground="White" BorderBrush="Transparent"/>
            <Button Content="Close" Click="BtnClose_Click" Padding="20,8"
                    Background="#FF555577" Foreground="White" BorderBrush="Transparent"/>
        </StackPanel>
    </Grid>
</Window>
