<Window x:Class="EchoUI.Views.SheetsEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sheets Editor" Width="700" Height="500"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Basic Sheets" FontWeight="SemiBold" Margin="0,0,0,8"/>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Rows}" AutoGenerateColumns="True"
                  CanUserAddRows="True" CanUserDeleteRows="True"
                  Background="{DynamicResource ControlBackgroundBrush}"
                  BorderBrush="{DynamicResource BorderBrush}"/>
    </Grid>
</Window>
